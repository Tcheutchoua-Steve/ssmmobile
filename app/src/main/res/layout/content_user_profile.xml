<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyl"
    android:padding="@dimen/nested_scroll_view_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.ssm.ssm.ui.fragments.home.UserProfileFragment"
    tools:showIn="@layout/fragment_user_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin_bottom"
            android:layout_marginTop="@dimen/card_margin_top"
            android:background="@color/mdtp_white"
            android:elevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_inner_layout_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_header_text_padding_bottom"
                    android:paddingLeft="@dimen/card_header_text_padding_left"
                    android:paddingStart="@dimen/card_header_text_padding_left"
                    android:paddingTop="@dimen/card_header_text_padding_top"
                    android:text="DESCRIPTION"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/card_header_size"/>

                <View
                    style="@style/Divider"
                    android:layout_marginBottom="@dimen/divider_margin_bottom" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/icon_margin_left_right"
                        android:layout_marginRight="@dimen/icon_margin_left_right"
                        android:contentDescription="NOM"
                        android:src="@drawable/ic_organise"/>

                    <LinearLayout
                        android:id="@+id/user_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="oo"
                            android:textColor="@color/mdtp_transparent_black"
                            android:textSize="@dimen/card_text_size"/>

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Toure Nathan"
                            android:textSize="@dimen/card_text_size"/>
                        <View
                            style="@style/Divider"
                            android:layout_marginBottom="@dimen/divider_margin_bottom"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/icon_margin_left_right"
                        android:layout_marginRight="@dimen/icon_margin_left_right"
                        android:contentDescription="IMG"
                        android:src="@drawable/ic_organise"/>
                    <LinearLayout
                        android:id="@+id/user_prenom_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MENU"
                            android:textColor="@color/mdtp_transparent_black"
                            android:textSize="@dimen/card_text_size"/>

                        <TextView
                            android:id="@+id/user_prenom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lapaix"
                            android:textSize="@dimen/card_text_size"/>
                        <View
                            style="@style/Divider"
                            android:layout_marginBottom="@dimen/divider_margin_bottom"/>
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/mdtp_white"
            android:elevation="@dimen/cardview_default_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_inner_layout_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/mdtp_separator_padding"
                    android:paddingStart="@dimen/appbar_padding_top"
                    android:paddingTop="@dimen/mdtp_separator_padding"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/spot_size"/>

                <View
                    style="@style/Divider"
                    android:layout_marginBottom="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:contentDescription="DOB"
                        android:src="@drawable/ic_organise"/>

                    <LinearLayout
                        android:id="@+id/user_dob_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DOB"
                            android:textColor="@color/mdtp_transparent_black"
                            android:textSize="@dimen/cardview_default_radius"/>

                        <TextView
                            android:id="@+id/user_dob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25/04/2015"
                            android:textSize="@dimen/card_text_size"/>
                        <View
                            style="@style/Divider"
                            android:layout_marginBottom="5dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:contentDescription="TEL"
                        android:src="@drawable/ic_organise"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TEL"
                            android:textColor="@color/mdtp_transparent_black"
                            android:textSize="@dimen/card_text_size"/>

                        <TextView
                            android:id="@+id/user_telephone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+237 650 413 931"
                            android:textSize="15dp"/>
                        <View
                            style="@style/Divider"
                            android:layout_marginBottom="5dp"/>
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:src="@drawable/com_facebook_button_icon_blue"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PAYS"
                            android:textColor="@color/mdtp_transparent_black"
                            android:textSize="@dimen/cardview_default_elevation"/>

                        <TextView
                            android:id="@+id/user_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cameroon"
                            android:textSize="@dimen/activity_horizontal_margin"
                            />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
